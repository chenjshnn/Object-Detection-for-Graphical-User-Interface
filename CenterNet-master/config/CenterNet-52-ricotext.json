{
    "system": {
        "dataset": "ricotext",
        "batch_size": 6,
        "sampling_function": "kp_detection",

        "train_split": "train",
        "val_split": "val",

        "learning_rate": 0.000005,
        "decay_rate": 10,

        "val_iter": 500,

        "opt_algo": "adam",
        "prefetch_size": 6,

        "max_iter": 480000,
        "stepsize": 450000,
        "snapshot": 5000,

        "chunk_sizes": [6]
    },
    
    "db": {
        "categories": 15,
        "rand_scale_min": 0.6,
        "rand_scale_max": 1.4,
        "rand_scale_step": 0.1,
        "rand_scales": null,

        "rand_crop": true,
        "rand_color": true,

        "border": 128,
        "gaussian_bump": true,

        "input_size": [511, 511],
        "output_sizes": [[128, 128]],

        "test_scales": [1],

        "top_k": 70,
        "kp_categories": 1,
        "ae_threshold": 0.5,
        "nms_threshold": 0.5,

        "max_per_image": 100
    }
}
